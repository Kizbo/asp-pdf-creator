@model IEnumerable<HTML2PDF.Models.Dokument>

@{
    ViewBag.Title = "Dokumenty";
}

<h2>Lista dokumentów na serwerze</h2>

<p>
    @Html.ActionLink("Utwórz", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Naglowek)
        </th>
        <th>Opcje</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Naglowek)
            </td>
            <td>
                @Html.ActionLink("PDF", "Generuj", new { id = item.Id }, new { @class = "glyphicon glyphicon-file" })
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit" })
                @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-eye-open" })
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash" })
            </td>
        </tr>
    }

</table>
